{
    "name": "@myst-os/monorepo",
    "private": true,
    "version": "0.1.0",
    "packageManager": "pnpm@9.15.9",
    "scripts": {
        "dev": "turbo run dev --parallel --filter=site --filter=api",
        "dev:e2e": "pnpm e2e:env && docker compose -f devops/docker-compose.yml up -d && pnpm seed:e2e && mkdir -p artifacts/e2e/logs && concurrently --kill-others --names \"site,api,worker\" --prefix-colors \"cyan,magenta,green\" \"bash -lc 'set -o pipefail; pnpm --filter site dev 2>&1 | tee artifacts/e2e/logs/site.log'\" \"bash -lc 'set -o pipefail; pnpm --filter api dev 2>&1 | tee artifacts/e2e/logs/api.log'\" \"bash -lc 'set -o pipefail; OUTBOX_POLL_INTERVAL_MS=500 pnpm outbox:worker 2>&1 | tee artifacts/e2e/logs/worker.log'\"",
        "dev:site": "pnpm --filter site dev",
        "dev:api": "pnpm --filter api dev",
        "e2e:env": "tsx scripts/sync-e2e-env.ts",
        "seed:e2e": "tsx scripts/seed-e2e.ts",
        "cleanup:e2e": "tsx scripts/cleanup-e2e.ts",
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed --project=chromium-desktop",
        "report:e2e": "tsx scripts/e2e-metrics.ts artifacts/e2e/json-report.json",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "typecheck": "turbo run typecheck",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "prepare": "husky install",
        "db:generate": "drizzle-kit generate:pg",
        "db:migrate": "drizzle-kit migrate",
        "outbox:worker": "tsx scripts/outbox-worker.ts",
        "outbox:worker:prod": "NODE_ENV=production tsx scripts/outbox-worker.ts"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.4.2",
        "@playwright-testing-library/test": "^4.5.0",
        "@playwright/test": "^1.56.1",
        "@types/nanoid": "^3.0.0",
        "@eslint/js": "^9.14.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.10.1",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "concurrently": "^9.0.1",
        "dotenv": "^16.4.5",
        "drizzle-kit": "0.31.5",
        "eslint": "^9.14.0",
        "eslint-config-next": "15.5.5",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.1.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "turbo": "^2.3.3",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "@types/nanoid": "^3.0.0",
        "tsx": "^4.19.2"
    }
}
