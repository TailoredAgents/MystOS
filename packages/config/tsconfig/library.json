{
  "extends": "@myst-os/config/tsconfig/base",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "noEmit": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "dist", "node_modules"]
}
